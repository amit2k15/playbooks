# Replace "YourScriptName" with the actual name of your script file without extension
$scriptName = "YourScriptName"

# Replace "Path\to\your\script" with the actual path to your script file
$scriptPath = "Path\to\your\script\$scriptName"

# Replace "YourScenario" with the name of your scenario
$scenarioName = "YourScenario"

# Path to LoadRunner's bin directory
$loadRunnerBinPath = "C:\Program Files (x86)\Micro Focus\LoadRunner\bin"  # Adjust the path accordingly

# Build the command to execute the script
$command = "$loadRunnerBinPath\mmdrv.exe -usr $scriptPath -load $scenarioName"

# Execute the command
Invoke-Expression $command
